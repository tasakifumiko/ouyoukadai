

<table class="table table-hover table-inverse">
<% if @range == "User" %>
<h2>Users search for "<%= "#{@word}" %></h2>
 <thead>
   <tr>
     <th>Image</th>
     <th>Name</th>
   </tr>
 </thead>
 <tbody>
  <% @users.each do |user| %>
    <tr>
      <tr><%= image_tag user.get_profile_image, size:'100x100' %></tr>
      <td><%= user.name %></td>
        </tr>
  <% end %>
    </tbody>
  <% else %>
 <h2>Books search for "<%= "#{@word}" %></h2>
 <thead>
   <tr>
     <th></th>
     <th>Title</th>
     <th>Opinion</th>
   </tr>
 </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>