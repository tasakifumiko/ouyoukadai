<div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>Follower Users</h2>
<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <% if @users.exists? %>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
        <td><%= user.name %></td>
        <td>フォロー数: <%= user.followings.count %></td>
        <td>フォロワー数: <%= user.followers.count %></td>

        <td><%= link_to 'Show', user %></td>
      </tr>
    <% end %>
  <% else %>
  <p>ユーザーはいません</p>
  <% end %>
  </tbody>
</table>